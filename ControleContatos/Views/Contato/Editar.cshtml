@model ContatoModel
@{
    ViewData["Title"] = "Editar contato";
}
<div class="text-center">

    <h1 class="display-4">Editar contato</h1>

</div>
<form asp-controller="Contato" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="name">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
    </div>
    <br />
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite seu melhor email">
    </div>
    <br />

    <div class="form-group">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite um celular para contato">
    </div>
    <br />
    <button type="submit" class="btn btn-primary w-100">Alterar</button>
    <br />
    <br />
    <a class="btn btn-secondary w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>